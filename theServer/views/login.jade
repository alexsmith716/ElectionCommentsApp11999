extends layout

block bodyScripts
  script(src='/javascripts/onbeforeunload.js')

block content
  .row.page-header
    .col-sm-12.col-md-6
      h2= pageHeader.header
      
  .row
    .col-xs-12.col-sm-8

      form(role="form", id="loginFormID", action="/login", method="post")
        fieldset

          .form-group
            label.control-label(for="userName") User Name
            div
              input(class="form-control", id="username", name="username", placeholder="Username", maxlength="20", type="text", required, autofocus)
  
          .form-group
            label.control-label(for="password") Password
            div
              input(class="form-control", id="password", name="password", placeholder="Password", maxlength="20", type="password", required)

          .form-group
            div
              input.form-control(type="submit", value="Submit", class="btn btn-primary btn-block")

